<%= form_tag do -%>
	<fieldset>
		<legend>Login</legend>
		<ul>
			<li>
				<label class="short">Username:</label>
				<%= text_field 		object_name, username_field_name %>
			</li>
			<li>
				<label class="short">Password:</label>
				<%= password_field 	object_name, password_field_name %>
			</li>
			<li><%= submit_tag "Log in" %></li>
		</ul>
	</fieldset>
<% end -%>